<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="header"
        android:id="@+id/header"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        android:padding="5dp"
        android:textColor="#fcfcfc"
        android:background="#2a86ff"
        android:singleLine="false"
        android:visibility="gone" />

    <RelativeLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
        android:textColor="#373737"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orderview_oid"
        android:textSize="@dimen/main_title_size"
        android:id="@+id/id" />

        <TextView
            android:textColor="#373737"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orderview_listview_date"
            android:textSize="@dimen/orderview_listview_normal_textsize"
            android:id="@+id/tdate"
            android:layout_below="@+id/id"
            android:layout_alignParentLeft="true"
            android:paddingTop="4dp" />

        <TextView
        android:textColor="#373737"
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orderview_rname"
        android:textSize="@dimen/orderview_listview_normal_textsize"
        android:id="@+id/rname"
            android:layout_below="@+id/tdate"
            android:layout_alignParentLeft="true"
            android:paddingTop="4dp" />

    <TextView
        android:textColor="#373737"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/orderview_oprice"
        android:textSize="@dimen/orderview_listview_normal_textsize"
        android:id="@+id/oprice"
        android:paddingTop="4dp"
        android:layout_below="@+id/tdate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

        <!--
            <TextView
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收貨人電話："
                android:id="@+id/rphone"
                android:layout_below="@+id/rname"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收貨人電子信箱："
                android:id="@+id/remail"
                android:layout_below="@+id/rphone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            -->
    </RelativeLayout>

</LinearLayout>